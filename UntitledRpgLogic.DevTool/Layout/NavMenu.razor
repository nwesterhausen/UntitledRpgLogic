@using UntitledRpgLogic.DevTool.Components
<div class="navbar bg-primary shadow-sm">
    <div class="navbar-start">
        <div class="dropdown">
            <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24"
                     stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16"/>
                </svg>
            </div>
            <ul
                tabindex="0"
                class="menu menu-sm dropdown-content bg-base-100 rounded-box z-1 mt-3 w-52 p-2 shadow">
                <li>
                    <MenuNavLink Href="/settings">@ConfigureText</MenuNavLink>
                </li>
                <li>
                    <details>
                        <summary>@TestingText</summary>
                        <ul class="p-2">
                            <li><MenuNavLink Href="/config-test">@ConfigTestText</MenuNavLink></li>
                        </ul>
                    </details>
                </li>
                <li>
                    <details>
                        <summary>@CreateText</summary>
                        <ul class="p-2">
                            <li>
                                <MenuNavLink Href="/create/material">@CreateMaterialText</MenuNavLink>
                            </li>
                            <li>
                                <MenuNavLink Href="/create/item">@CreateItemText</MenuNavLink>
                            </li>
                        </ul>
                    </details>
                </li>
                <li>
                    <MenuNavLink Href="/import">@ImportText</MenuNavLink>
                </li>
            </ul>
        </div>
        <a class="btn btn-ghost text-xl" href="/">UntitledRpg Dev Tooling</a>
    </div>
    <div class="navbar-start hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
            <li>
                <details>
                    <summary>@TestingText</summary>
                    <ul class="p-2">
                        <li><MenuNavLink Href="/config-test">@ConfigTestText</MenuNavLink></li>
                    </ul>
                </details>
            </li>
            <li>
                <details>
                    <summary>@CreateText</summary>
                    <ul class="p-2">
                        <li>
                            <MenuNavLink Href="/create/material">@CreateMaterialText</MenuNavLink>
                        </li>
                        <li>
                            <MenuNavLink Href="/create/item">@CreateItemText</MenuNavLink>
                        </li>
                    </ul>
                </details>
            </li>
            <li>
                <MenuNavLink Href="/settings">@ConfigureText</MenuNavLink>
            </li>
            <li>
                <MenuNavLink Href="/import">@ImportText</MenuNavLink>
            </li>
        </ul>
    </div>
    <div class="navbar-end">
        <div class="flex gap-2">
            <ThemeChanger/>
            <a class="btn">@ExportText</a>
        </div>
    </div>
</div>

@code{
    const string TestingText = "Testing";
    const string ConfigTestText = "Configuration";

    const string ConfigureText = "Configure Tooling";
    const string CreateText = "Create";
    const string ExportText = "Export";

    const string CreateMaterialText = "Material";
    const string CreateItemText = "Item";

    const string ImportText = "Import";
}
